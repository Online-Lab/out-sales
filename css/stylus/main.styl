@import mixins
@import variables
body
    font-family Tahoma
    font-size 14px
    color #fff
ul,
li
    display inline-block
*:focus
    outline none

.main-wrap
    width 100%


.center
    width 1200px
    margin auto

    section
        display block
        width 100%

.logo-wrap
    display block
    text-align center
    text-decoration none
    margin-bottom 100px

.logo,
.logo-desk
    display block
    color #fff


.fs1
    font-size txt18
    font-weight 700
    text-align right
    color #fff

.fs2
    font-size txt50
    font-weight 900

.fs3
    font-size txt15
    fony-weight 100
    font-family Verdana
    
.fs4
    text-align center
    font-family Verdana
    fony-weight 100
    font-size txt30

.fs5
    text-align center
    font-family Verdana
    fony-weight 700
    font-size txt20
    text-transform uppercase

.sec1
    background url(../../img/bg1.png) 0 0 no-repeat
    background-size cover
    background-position center top
    
.sec2
    background-color #00455E






.tel
    margin-bottom 50px

.btn-wrap
    text-align center
    margin-bottom 200px

.btn   
    display inline-block
    width 215px
    height 82px
    box-sizing border-box
    border-radius 10px
    border 4px solid #fff
    background-color rgba(255,255,255, .3)
    font-size txt17
    font-family verdana 
    font-weight 100
    margin 0 50px
    
.wish-wrap
    flex()
    margin-top 100px
    justify-content space-around
    .wish
        width 25%
        display inline-block
        .img
            width 70%
            height 170px
            margin auto
            -webkit-mask-repeat no-repeat
            -webkit-mask-position center
            background-color #fff
        .txt
            text-align center
            text-transform uppercase
            font-size 19px
            line-height 25px
            
        &:hover
            .img
                background-color hovery
            .txt
                color hovery
.rocket
    -webkit-mask-image: url(../../img/rocket.svg)
